{
    "name": "rolod0x",
    "version": "0.0.1",
    "description": "Replace blockchain addresses with labels",
    "homepage_url": "https://github.com/aspiers/rolod0x",
    "manifest_version": 2,
    "minimum_chrome_version": "80",
    "browser_specific_settings": {
        "gecko": {
            "id": "awesome-extension@notlmn.github.io",
            "strict_min_version": "80.0"
        }
    },
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "https://github.com/fregante/browser-extension-template/*",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "js": [
                "content.ts"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "browser_style": true,
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "persistent": false,
        "scripts": [
            "background.ts"
        ]
    }
}
