{
    "type": "module",
    "private": true,
    "targets": {
        "webext-dev": {
            "sourceMap": {
                "inline": true,
                "inlineSources": true
            }
        },
        "webext-prod": {}
    },
    "scripts": {
        "build": "parcel build source/manifest.json --target webext-prod --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
        "lint": "run-p lint:*",
        "lint-fix": "run-p 'lint:* -- --fix'",
        "lint:css": "stylelint source/**/*.css",
        "lint:js": "xo",
        "lint:ts": "tsc --noEmit",
        "test": "run-p lint:* build",
        "watch": "parcel watch source/manifest.json --target webext-dev --host localhost --dist-dir distribution --no-cache"
    },
    "browserslist": [
        "last 1 Chrome version",
        "last 1 Firefox version"
    ],
    "dependencies": {
        "ethers": "^5.6.5",
        "parcel": "^2.5.0",
        "typescript": "^4.9.5",
        "webext-base-css": "^1.4.0",
        "webext-options-sync": "^3.0.1",
        "webextension-polyfill": "^0.8.0"
    },
    "devDependencies": {
        "@parcel/config-webextension": "^2.5.0",
        "@parcel/core": "^2.8.3",
        "@sindresorhus/tsconfig": "^3.0.1",
        "@types/webextension-polyfill": "^0.10.0",
        "@typescript-eslint/parser": "^5.54.1",
        "eslint": "^8.36.0",
        "npm-run-all": "^4.1.5",
        "process": "^0.11.10",
        "stylelint": "^14.6.0",
        "stylelint-config-xo": "^0.21.0",
        "xo": "^0.48.0"
    },
    "alias": {
        "process": false
    },
    "webExt": {
        "sourceDir": "distribution",
        "run": {
            "startUrl": [
                "https://github.com/fregante/browser-extension-template"
            ]
        }
    },
    "peerDependencies": {
        "@parcel/core": "^2.5.0",
        "assert": "*",
        "browserify-zlib": "*",
        "buffer": "*",
        "console-browserify": "*",
        "constants-browserify": "*",
        "crypto-browserify": "*",
        "domain-browser": "*",
        "events": "*",
        "https-browserify": "*",
        "os-browserify": "*",
        "path-browserify": "*",
        "punycode": "*",
        "querystring-es3": "*",
        "stream-browserify": "*",
        "stream-http": "*",
        "string_decoder": "*",
        "timers-browserify": "*",
        "tty-browserify": "*",
        "url": "*",
        "util": "*",
        "vm-browserify": "*",
        "webpack": "*"
    },
    "packageManager": "yarn@3.3.1",
    "license": "GPL-3.0-or-later"
}
