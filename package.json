{
    "private": true,
    "targets": {
        "webext-dev": {
            "sourceMap": {
                "inline": true,
                "inlineSources": true
            }
        },
        "webext-prod": {}
    },
    "scripts": {
        "build": "parcel build source/manifest.json --target webext-prod --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
        "lint": "run-p lint:*",
        "lint-fix": "run-p 'lint:* -- --fix'",
        "lint:css": "stylelint source/**/*.css",
        "lint:js": "xo",
        "test": "run-p lint:* build",
        "watch": "parcel watch source/manifest.json --target webext-dev --host localhost --dist-dir distribution --no-cache"
    },
    "browserslist": [
        "last 1 Chrome version",
        "last 1 Firefox version"
    ],
    "dependencies": {
        "ethers": "^5.6.4",
        "webext-options-sync": "^3.1.0",
        "webextension-polyfill": "^0.8.0"
    },
    "devDependencies": {
        "@parcel/config-webextension": "^2.5.0",
        "@parcel/transformer-image": "^2.5.0",
        "@sindresorhus/tsconfig": "^2.0.0",
        "npm-run-all": "^4.1.5",
        "parcel": "^2.5.0",
        "process": "^0.11.10",
        "stylelint": "^14.6.0",
        "stylelint-config-xo": "^0.21.0",
        "xo": "^0.48.0"
    },
    "alias": {
        "process": false
    },
    "webExt": {
        "sourceDir": "distribution",
        "run": {
            "startUrl": [
                "https://github.com/fregante/browser-extension-template"
            ]
        }
    }
}
